{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    <div class="global">
        <!--header-->
        <header>
            <div class="header">
                <div class="container">
                    <div class="row">
                        <article class="span12">

                            {{widget('logo', 'name', {"defaultlogo": asset('images/logo.jpg')})|raw}}
                            {{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}

                            <div class="fright">
                                {{widget('content', 'fright', {content: '<ul class="top"><li><a href="#">Help</a></li><li><a href="#">Site map</a></li><li><a href="#">FAQs</a></li></ul>', lines: 'all'})|raw}}
                                {{widget('profile', 'form', { 'profileType':'form'})|raw}}
                                {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                            </div>

                            <div class="clear"></div>

                        </article>
                    </div>
                </div>
            </div>
        </header>
        <!--content-->
        <div class="container">
            <div class="row">
                <article class="span12">

                    {{zone('main')|raw}}

                </article>
            </div>
        </div>
    </div>
    <!--footer-->
    <footer>
        <div class="container">
            <div class="row">
                <section class="span12">
                    <div class="row">
                        <article class="span6">

                            {{widget('companyname', 'companyname', {"business": "center point"})|raw}}
                            {{widget('profile', 'copyright', { 'profileType':'copyright', 'copyright':'&copy Copyright 2013. All rights reserved'})|raw}}
                            {{widget('space', 'space', {'height': '30'})|raw}}

                        </article>
                        <article class="span6">

                            <div class="right">
                                {{widget('content', 'call', {content: 'call us toll free', lines: 'all'})|raw}}
                                {{widget('profile', 'phone', { 'profileType':'phone', 'phone':'1 800 345 67 89'})|raw}}
                                {{widget('space', 'space', {'height': '30'})|raw}}
                            </div>

                        </article>
                    </div>
                </section>
            </div>
        </div>
    </footer>     
</div>

{% endblock %}